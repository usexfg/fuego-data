# GitHub Organization Backup System - Environment Variables
# Copy this file to .env and fill in your actual values

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# Centralized Git Hosting Services
GITLAB_TOKEN=your_gitlab_personal_access_token_here
GITEA_TOKEN=your_gitea_access_token_here
BITBUCKET_USERNAME=your_bitbucket_username
BITBUCKET_APP_PASSWORD=your_bitbucket_app_password
AZURE_DEVOPS_TOKEN=your_azure_devops_personal_access_token

# Decentralized Git Hosting Services
RADICLE_NODE_ID=your_radicle_node_id_here
GITTORRENT_TRACKER_URL=http://localhost:6881
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=https://ipfs.io
DAT_SHARE_KEY=your_dat_share_key_here

# Email Configuration (if using email notifications)
EMAIL_USERNAME=your_email@your-domain.com
EMAIL_PASSWORD=your_email_password_or_app_password

# Slack Configuration (if using Slack notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Webhook Configuration (if using webhook notifications)
WEBHOOK_URL=https://your-webhook-endpoint.com/backup
WEBHOOK_SECRET=your_webhook_secret_here

# Security Configuration (if using encrypted backups)
ENCRYPTION_KEY=your_32_character_encryption_key_here 